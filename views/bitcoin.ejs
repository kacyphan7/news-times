                    </li>
                    <li class="sidelist">
                        <a href="/bbc">BBC News</a>
                    </li>
                    <li class="sidelist">
                        <a href="/sources">Sources</a>
                    </li>
                </ul>
            </div>

            <!-- body -->
            <div class="column is-8-desktop is-12-tablet">
                <div class="content mt-2">
                    <h2 class="mb-4 has-text-weight-medium">All Articles About Bitcoin</h2>
                    <hr>
                    <% for (let i = 0; i < bitcoin.length; i++) { %>
                    <% const bitcoins = bitcoin[i]; %>
                    <div class="card">
                        <div class="card-content">
                            <h2 class="card-title"><%= bitcoins.title %></h2>
                            <div class="card-image">
                                <img src="<%= bitcoins.urlToImage %>">
                            </div>
                            <p class="card-text">
                                <%= bitcoins.description %>
                            </p>
                            <a href="<%= bitcoins.url %>" class="card-link">Read More</a>
                            <hr>
                            <form action="/savedArticles/add" method="POST">
                                <input type="hidden" name="title" value="<%= bitcoins.title %>">
                                <input type="hidden" name="author" value="<%= bitcoins.author %>">
                                <input type="hidden" name="content" value="<%= bitcoins.content %>">
                                <input type="hidden" name="description" value="<%= bitcoins.description %>">
                                <input type="hidden" name="publishedAt" value="<%= bitcoins.publishedAt %>">
                                <button type="submit" class="button is-black">Save</button>
                            </form>
                        </div>
                    </div>
                    <hr>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
