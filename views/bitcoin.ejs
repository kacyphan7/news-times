<section class="pt-5">
    <div class="container shadow section-sm rounded">
        <div class="columns is-multiline">
            <!-- sidebar -->
            <div class="column is-3-desktop is-12-tablet">
                <ul class="sidenav">
                    <li title="Basic Startup" class="sidelist parent active">
                        <a href="/bitcoin">Bitcoin</a>
                        <ul>
                            <% let uniqueAuthors = []; %>
                            <% bitcoin.forEach((article) => {
                            if (!uniqueAuthors.includes(article.author)) {
                                uniqueAuthors.push(article.author);
                        %>
                            <li class="sidelist">
                                <a href="/bitcoin/<%= encodeURIComponent(article.author) %>">
                                    <%= article.author %>
                                </a>
                            </li>
                            <% }
                        }); %>
                        </ul>
                    </li>
                    <li class="sidelist">
                        <a href="/apple">Apple</a>
                    </li>
                    <li class="sidelist">
                        <a href="/business">Business</a>
