</section>
<section class="pt-5">
    <div class="container shadow section-sm rounded">
        <div class="columns is-multiline">
            <!-- sidebar -->
            <div class="column is-3-desktop is-12-tablet">
                <ul class="sidenav">
                    <li title="Basic Startup" class="sidelist parent active">
                        <a href="/apple">Apple</a>
                        <ul>
                            <% let authors = new Set(); %>
                            <% for (let index = 0; index < articles.length; index++) { %>
                            <% let article = articles[index]; %>
                            <% if (!authors.has(article.author)) { %>
                            <li class="sidelist">
                                <a href="/apple/<%= encodeURIComponent(article.author) %>">
                                    <%= article.author %>
                                </a>
                            </li>
                            <% authors.add(article.author); %>
                            <% } %>
                            <% } %>
                        </ul>
                    </li>
                    <li class="sidelist">
                        <a href="/business">Business</a>
                    </li>
                    <li class="sidelist">
                        <a href="/techCrunch">TechCrunch</a>
                    </li>
                    <li class="sidelist">
                        <a href="/wallStreet">Wall Street Journal</a>
                    </li>
                    <li class="sidelist">
                        <a href="/tesla">Tesla</a>
                    </li>
                    <li class="sidelist">
                        <a href="/bitcoin">Bitcoin</a>
                    </li>
                    <li class="sidelist">
                        <a href="/trump">Trump</a>
                    </li>
                    <li class="sidelist">
                        <a href="/us">US News</a>
                    </li>
                    <li class="sidelist">
                        <a href="/bbc">BBC News</a>
                    </li>
                    <li class="sidelist">
                        <a href="/sources">Sources</a>
                    </li>
                </ul>
            </div>

            <!-- body -->
            <div class="column is-8-desktop is-12-tablet">
                <div class="content mt-2">
                    <h2 class="mb-4 has-text-weight-medium">All Articles Mentioning Apple</h2>
                    <hr>
                    <% for (let i = 0; i < articles.length; i++) { %>
                    <% const article = articles[i]; %>
                    <div class="card">
                        <div class="card-content">
                            <h2 class="card-title"><%= article.title %></h2>
                            <div class="card-image">
                                <img src="<%= article.urlToImage %>">
                            </div>
                            <p class="card-text">
                                <%= article.author %>
                            </p>
                            <p class="card-text">
                                <%= article.description %>
                            </p>
                            <a href="<%= article.url %>" class="card-link">Read More</a>
                            <hr>
                            <!-- Save button -->
                            <form action="/savedArticles/add" method="POST">
                                <input type="hidden" name="articleId" value="<%= article.id %>">
                                <button type="submit" class="button is-black">Save</button>
                            </form>
                        </div>
                    </div>
                    <hr>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</section>